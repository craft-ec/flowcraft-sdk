{
  "name": "@craftec/flowcraft-sdk",
  "version": "0.1.3",
  "description": "SDK for Flowcraft subscription streaming protocol on Solana",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
